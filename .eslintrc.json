{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "linebreak-style": ["off"],
        "semi": ["error", "never"],
        "no-underscore-dangle": ["error", {
            "enforceInMethodNames": false,
            "allowAfterThis": true            
        }],
        "class-methods-use-this": ["off"]
    }
}
